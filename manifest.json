{
  "manifest_version": 3,
  "name": "SkinXport",
  "version": "1.0",
  "description": "Detailed view for sales on Skinport.",
  "permissions": ["storage", "unlimitedStorage"],
  "host_permissions": [
    "https://*.skinport.com/*"
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "js": [
        "content_scripts/index.js"
      ],
      "matches": [
        "https://*.skinport.com/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}