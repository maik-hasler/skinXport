{
  "manifest_version": 3,
  "name": "SkinXport",
  "version": "1.0",
  "description": "Detailed view for sales on Skinport.",
  "permissions": [
    "tabs",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://*.skinport.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "minimum_chrome_version": "92",
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.skinport.com/*"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ]
}