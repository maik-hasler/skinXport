{
  "manifest_version": 3,
  "name": "SkinXport",
  "version": "1.0",
  "description": "Detailed view for sales on Skinport.",
  "permissions": ["tabs"],
  "host_permissions": [
    "https://*.skinport.com/*"
  ],
  "content_scripts": [
    {
        "js": ["content.js"],
        "matches": ["https://*.skinport.com/*"],
        "css": ["style.css"]
    }
  ]
}
